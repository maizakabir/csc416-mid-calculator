<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1C9673">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text= "0"
        android:id= "@+id/textView"
        android:background="#ffffff"
        android:layout_margin="0dp"
        android:gravity="bottom|right"
        android:textSize="60sp"
        android:nestedScrollingEnabled="false"
        android:maxLines= "2"
        android:maxLength="17"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="C"
        android:layout_below= "@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart= "@+id/textView"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickClear"
        android:maxWidth= "100dp"  />

    <Button
        android:id="@+id/btnDivByX"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="1/x"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf="@+id/btnClear"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:maxWidth= "100dp" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="%"
        android:layout_below= "@+id/textView"
        android:layout_toRightOf="@+id/btnDivByX"
        android:layout_toEndOf= "@+id/btnDivByX"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:maxWidth= "100dp"  />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="/"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btnPercent"
        android:layout_toEndOf="@+id/btnPercent"
        android:textColor= "#ffffff"
        android:textSize="30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:maxWidth= "100dp" />


    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="7"
        android:layout_below= "@+id/btnClear"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_toStartOf= "@+id/btn8"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="8"
        android:layout_below= "@+id/btnDivByX"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf= "@+id/btnClear"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="9"
        android:layout_below= "@+id/btnPercent"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf= "@+id/btn8"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="*"
        android:layout_below= "@+id/btnDiv"
        android:layout_toRightOf="@+id/btnPercent"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"  />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="4"
        android:layout_below= "@+id/btn7"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_toStartOf= "@+id/btn8"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="5"
        android:layout_alignTop= "@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf= "@+id/btn4"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="6"
        android:layout_below= "@+id/btn9"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf= "@+id/btn8"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="-"
        android:layout_below= "@+id/btnMulti"
        android:layout_toRightOf="@+id/btn6"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"  />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="1"
        android:layout_below= "@+id/btn4"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart= "@+id/btn4"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="2"
        android:layout_below= "@+id/btn5"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf= "@+id/btn4"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="3"
        android:layout_below= "@+id/btn6"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf= "@+id/btn2"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"  />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:text="+"
        android:layout_below= "@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf= "@+id/btn3"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:maxWidth="100dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="202dp"
        android:layout_height="90dp"
        android:text="0"
        android:layout_below= "@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart= "@+id/btn1"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"  />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:text="="
        android:layout_below= "@+id/btn3"
        android:layout_toRightOf="@+id/btnDivByX"
        android:layout_toEndOf= "@+id/btnDivByX"
        android:textColor="#ffffff"
        android:textSize= "30sp"
        android:background="#4d4d4d"
        android:onClick="onClickEqual"  />


</RelativeLayout>